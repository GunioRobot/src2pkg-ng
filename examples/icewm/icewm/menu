# tuxdev's simple menu suitable for expansion
#
# If you want to tell me about a program not in here or
# suggest a new menu category, email to tuxdev103@gmail.com
# Submissions should be snippets from this file and should have
# icons configured, if available.

prog rxvt xterm rxvt -fn 6x13 -bg black -cr green -fg white -C

menu Utilities folder
{
   prog rxvt xterm rxvt -fn 6x13 -bg black -cr green -fg white -C
   prog urxvt xterm urxvt -fn 6x13 -bg black -cr green -fg white -C
   prog PCManFM /usr/share/pixmaps/pcmanfm.png pcmanfm
   prog emelFM2 /usr/share/pixmaps/emelfm2/emelfm2_32.png emelfm2
   prog XKill bomb xkill
}

menu Games folder
{
   prog EBoard /usr/share/pixmaps/chess.png eboard
   prog "Chromium B.S.U." /usr/share/pixmaps/chromium-bsu.png chromium-bsu
   prog Maelstrom /usr/games/Maelstrom/icon.xpm Maelstrom
}

menu Multimedia folder
{
   prog Asunder /usr/share/pixmaps/asunder.png asunder
   prog Aumix none aumix
   prog XMMS xmms xmms
   prog Audacity /usr/share/audacity/audacity.xpm audacity
   prog Rosegarden /opt/kde/share/icons/hicolor/32x32/apps/rosegarden.png rosegarden
   prog Denemo none denemo
   prog TiMidity++ none timidity -ig
   prog XV xv xv
   prog Gimp gimp gimp
   prog Blender /usr/share/pixmaps/blender.png blender
   prog Xine /usr/share/pixmaps/xine.xpm xine
}

menu Net folder
{
   prog Gaim /usr/share/pixmaps/gaim.png gaim
   prog gFTP /usr/share/pixmaps/gftp.png gftp
   prog Xchat /usr/share/pixmaps/xchat.png xchat
   prog Transmission /usr/share/pixmaps/transmission.png transmission
   prog Dillo none dillo
   prog Arora /usr/share/pixmaps/arora.xpm arora
   prog Firefox /usr/share/pixmaps/firefox.png firefox
   prog Thunderbird /usr/share/pixmaps/thunderbird.png thunderbird
}

menu Office folder
{
   prog OpenOffice.org /usr/share/pixmaps/openofficeorg-21-writer.png soffice --writer
   prog KOffice none koffice
   prog Abiword /usr/share/icons/abiword_48.png abiword
   prog Gnumeric /usr/share/pixmaps/gnome-gnumeric.png gnumeric
   prog Abs none abs
   prog LyX /usr/share/lyx/images/lyx.png lyx
   prog Xpdf pdf xpdf
   prog XSane /usr/share/sane/xsane/xsane-logo.xpm xsane
}
